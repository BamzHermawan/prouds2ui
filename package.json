{
	"name": "prouds2ui",
	"version": "1.0.0",
	"description": "Front-end HTML/CSS/JS for PRouDS",
	"scripts": {
		"bersih": "rm -rf dist",
		"ngoding": "parcel src/login/login.html src/pages/*.html -p 5500",
		"ngoding:pages": "parcel src/pages/*.html -d dist/pages -p 5500",
		"ngoding:login": "parcel src/login/login.html -d dist/login -p 5500",
		"mantap": "rm -rf release/{login,pages,src} && yarn run mantap:login && yarn run mantap:pages && yarn run mantap:assamble",
		"mantap:login": "parcel build src/login/login.html -d release/login --public-url ./src --no-minify --no-source-maps",
		"mantap:pages": "parcel build src/pages/*.html -d release/pages --public-url ./src --no-minify --no-source-maps",
		"mantap:assamble": "cd release && mkdir src && mv ./pages/*.js ./src && mv ./pages/*.css ./src"
	},
	"author": "PMO Telkomsigma",
	"devDependencies": {
		"@babel/core": "^7.4.5",
		"@babel/preset-env": "^7.4.5",
		"@vue/component-compiler-utils": "^3.0.0",
		"parcel-bundler": "^1.12.3",
		"parcel-plugin-markdown": "^0.3.1",
		"parcel-plugin-markdown-string": "^1.3.5",
		"pug": "^2.0.3",
		"sass": "^1.21.0",
		"vue-template-compiler": "^2.6.10"
	},
	"marked": {
		"breaks": true,
		"pedantic": false,
		"gfm": true,
		"tables": true,
		"sanitize": false,
		"smartLists": true,
		"smartypants": false,
		"xhtml": false
	},
	"dependencies": {
		"buefy": "^0.7.10",
		"highcharts": "^7.1.2",
		"jsgantt-improved": "^2.2.11",
		"vue": "^2.6.10",
		"vue-hot-reload-api": "^2.3.3"
	},
	"alias": {
		"vue": "./node_modules/vue/dist/vue.common.js"
	}
}
